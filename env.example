# ============================================
# GoRide - Environment Variables
# ============================================
# Copy this file to .env and update values
# cp env.example .env

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://goride_user:goride_password@localhost:5432/goride_db?schema=public


# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please-use-strong-random-string
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# API GATEWAY CONFIGURATION
# ============================================
GATEWAY_PORT=3000
API_PREFIX=api/v1
NODE_ENV=development

# CORS Configuration (comma-separated)
CORS_ORIGIN=http://localhost:3002,http://localhost:3003

# ============================================
# AUTH SERVICE (Microservice) - gRPC
# ============================================
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=50051
AUTH_SERVICE_HTTP_PORT=3001

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Web User
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_GATEWAY_PORT=3000
NEXT_PUBLIC_WEB_USER_PORT=3003

# Web Manager
NEXT_PUBLIC_WEB_MANAGER_PORT=3002

# ============================================
# GOOGLE GEMINI AI (Chatbot)
# ============================================
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=5242880
UPLOAD_DEST=./uploads

# ============================================
# OTHER SERVICES (Future)
# ============================================
# User Service
USER_SERVICE_HOST=localhost
USER_SERVICE_PORT=3002

# Rental Service
RENTAL_SERVICE_HOST=localhost
RENTAL_SERVICE_PORT=3003

# Payment Service
PAYMENT_SERVICE_HOST=localhost
PAYMENT_SERVICE_PORT=3004

# AI Service
AI_SERVICE_HOST=localhost
AI_SERVICE_PORT=3005

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=debug
ENABLE_LOGGING=true

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=10
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
